<ol class="post-list">
  <li>
    <article class="post">
      <div class="title">
        <a href="{{blog_url}}" target="_blank">{{title}}</a>
        <span>({{blog_url}})</span>
      </div>
      <div class="meta">
        {{user.username}}
        |
        <a href="/blog/{{id}}">{{comments.length}} comment(s)</a>
      </div>
    </article>
  </li>
</ol>