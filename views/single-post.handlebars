<article class="post">
      <div class="title">
        <a href="{{blog_url}}" target="_blank">{{title}}</a>
        <span>({{blog_url}})</span>
      </div>
      <div class="meta">
        {{user.username}}
        |
        <a href="/blog/{{id}}">{{comments.length}} comment(s)</a>
      </div>
    </article>

    <form class="comment-form">
  <div>
    <textarea name="comment-body"></textarea>
  </div>

  <div>
    <button type="submit">add comment</button>
  </div>
</form>

<div class="comments">
  {{#each post.comments}}
  <section class="comment">
    <div class="meta">
      {{user.username}} on {{created_at}}
    </div>
    <div class="text">
      {{comment_text}}
    </div>
  </section>
  {{/each}}
</div>
<script src="/javascript/comment.js"></script>